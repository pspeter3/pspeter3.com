---
layout: base
title: Blog
---

<main class="mx-auto max-w-2xl space-y-6 px-4 pb-6">
  {{> partials/head }}
  <h1
    class="
      text-4xl
      font-extrabold
      tracking-tight
      text-gray-900
      dark:text-gray-200
    "
  >
    {{title}}
  </h1>
  {{#each (group collections.posts)}}
  <section>
    <h2
      class="
        text-sm
        font-semibold
        uppercase
        leading-6
        tracking-wide
        text-gray-500
        dark:text-gray-400
      "
    >
      {{title}}
    </h2>
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      {{#each items}}{{>partials/item .}}{{/each}}
    </ul>
  </section>
  {{/each}}
</main>
