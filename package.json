{
  "name": "pspeter3.com",
  "description": "Personal website",
  "private": true,
  "scripts": {
    "build": "eleventy",
    "fmt": "prettier --write 'src/**/*' '*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/pspeter3.com.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "prettier": "^1.18.2"
  },
  "prettier": {
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
