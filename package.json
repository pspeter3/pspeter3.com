{
  "name": "pspeter3.com",
  "description": "Personal website",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "fix": "npm run fix:lint && npm run fix:format",
    "start": "next start",
    "test": "npm run test:format && npm run test:lint && npm run test:types && npm run test:spec",
    "fix:format": "prettier --write 'src/**/*' '*.{js,md}'",
    "fix:lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "test:format": "prettier --check 'src/**/*' '*.{js,md}'",
    "test:lint": "eslint 'src/**/*.{ts,tsx}'",
    "test:spec": "jest --ci",
    "test:types": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/pspeter3.com.git"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "react-markdown": "^5.0.3",
    "react-syntax-highlighter": "^15.4.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/google.analytics": "0.0.41",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@types/rss": "0.0.28",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-glob": "^3.2.5",
    "gray-matter": "^4.0.2",
    "jest": "^26.6.3",
    "next": "^10.0.7",
    "prettier": "^2.2.1",
    "rss": "^1.2.2",
    "sitemap": "^6.4.0",
    "typescript": "^4.2.2"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "jsx-a11y",
      "react-hooks"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off",
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/tools/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.next/"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all"
  }
}
