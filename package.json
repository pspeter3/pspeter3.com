{
  "name": "pspeter3.com",
  "description": "Personal website",
  "private": true,
  "scripts": {
    "build": "webpack --mode production && eleventy",
    "fmt": "prettier --write 'src/**/*' '*.js'",
    "start": "run-p watch:*",
    "watch:site": "eleventy --serve --watch",
    "watch:assets": "webpack --mode development --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/pspeter3.com.git"
  },
  "dependencies": {
    "rss": "^1.2.2",
    "sitemap": "^5.1.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "html-minifier": "^4.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.19.1",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "prettier": {
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
