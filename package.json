{
  "name": "pspeter3.com",
  "description": "Personal website",
  "private": true,
  "scripts": {
    "build": "wireit",
    "fix": "wireit",
    "start": "wireit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/pspeter3.com.git"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@tailwindcss/typography": "^0.5.8",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "feather-icons": "^4.29.0",
    "htmlnano": "^2.0.3",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "rss": "^1.2.2",
    "sitemap": "^7.0.0",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.2.4",
    "terser": "^5.16.1",
    "wireit": "^0.9.5"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:site",
        "build:styles"
      ]
    },
    "build:site": {
      "command": "eleventy",
      "files": [
        ".eleventy.js",
        "src/**/*.hbs",
        "src/**/*.js",
        "src/**/*.json",
        "src/img/**"
      ],
      "output": [
        "_site/**/*.{html,xml}",
        "_site/img/*"
      ]
    },
    "build:styles": {
      "command": "tailwindcss --output _site/assets/tailwind.css --minify",
      "files": [
        "tailwind.config.js",
        "src/**/*.hbs"
      ]
    },
    "fix": {
      "command": "prettier --cache --write 'src/**/*' '*.{js,md}'"
    },
    "start": {
      "dependencies": [
        "watch:site",
        "watch:styles"
      ]
    },
    "watch:site": {
      "command": "eleventy --incremental --serve",
      "service": true
    },
    "watch:styles": {
      "command": "tailwindcss --output _site/assets/tailwind.css --watch",
      "service": true
    }
  }
}
