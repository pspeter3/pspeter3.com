{
  "name": "pspeter3.com",
  "description": "Personal website",
  "private": true,
  "scripts": {
    "build": "npm run generate && next build",
    "dev": "next dev",
    "fix": "run-s fix:lint fix:format",
    "generate": "run-p generate:*",
    "start": "next start",
    "test": "run-p test:*",
    "fix:format": "prettier --write 'src/**/*' '*.{js,md}'",
    "fix:lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "generate:feed": "npm run ts-exec -- src/tools/rss.ts",
    "generate:sitemap": "npm run ts-exec -- src/tools/sitemap.ts",
    "test:format": "prettier --check 'src/**/*' '*.{js,md}'",
    "test:lint": "eslint 'src/**/*.{ts,tsx}'",
    "test:types": "tsc --pretty",
    "ts-exec": "ts-node --transpile-only --compiler-options='{\"module\": \"commonjs\"}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/pspeter3.com.git"
  },
  "dependencies": {
    "eslint-config-next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-markdown": "^7.1.0",
    "react-syntax-highlighter": "^15.4.4",
    "remark-gfm": "^3.0.0"
  },
  "devDependencies": {
    "@babel/node": "^7.15.8",
    "@tailwindcss/typography": "^0.4.1",
    "@types/google.analytics": "0.0.42",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/rss": "0.0.29",
    "autoprefixer": "^10.3.7",
    "eslint": "^7.20.0",
    "fast-glob": "^3.2.5",
    "gray-matter": "^4.0.3",
    "next": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.9",
    "prettier": "^2.4.1",
    "prettier-plugin-tailwind": "^2.2.12",
    "rss": "^1.2.2",
    "sitemap": "^7.0.0",
    "tailwindcss": "^2.2.17",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "next"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all"
  }
}
