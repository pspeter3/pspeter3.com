{
  "name": "pspeter3.com",
  "description": "Personal website",
  "private": true,
  "scripts": {
    "build": "run-p build:*",
    "fix": "prettier --write 'src/**/*' '*.{js,md}'",
    "start": "run-p watch:*",
    "build:site": "eleventy",
    "build:styles": "tailwindcss --output _site/assets/tailwind.css --minify",
    "watch:site": "eleventy --incremental --serve",
    "watch:styles": "tailwindcss --output _site/assets/tailwind.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/pspeter3.com.git"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@tailwindcss/typography": "^0.5.8",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "feather-icons": "^4.29.0",
    "htmlnano": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "rss": "^1.2.2",
    "sitemap": "^7.0.0",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.2.4",
    "terser": "^5.16.1"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
