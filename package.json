{
  "name": "pspeter3.com",
  "description": "Personal website",
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:next": "next build",
    "build:export": "next export",
    "fmt": "prettier --write 'src/**/*' '*.md'",
    "start": "next",
    "test:fmt": "prettier --check 'src/**/*' '*.md'",
    "test:spec": "jest --ci",
    "test:types": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/pspeter3.com.git"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^26.0.12",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "jest": "^26.4.2",
    "next": "^9.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rss": "^1.2.2",
    "sitemap": "^6.2.0",
    "typescript": "^4.0.2"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/tools/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.next/"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.hbs",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
